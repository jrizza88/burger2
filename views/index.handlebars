
<!-- burgers that are ready are listed here -->
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-1 menu1">
        <ul>
        <h4> <u>Ready to eat burgers!</u></h4>
          <div id="burgerUpdate">
            {{#each burgers}}
              {{#unless this.devoured}}
                    <li>
          <!--  {{burger_name}} -->
                <div>
                  <!-- <h5>Burger is ready!</h5> -->
                    {{this.id}}. {{this.burger_name}}


                  <form id="burgerUpdate" action="/update?_method=PUT" method="POST">
                  								<div class="input-group">
                  									<input type="hidden" class="form-control" name="id" value="{{this.id}}">
                  									<span class="input-group-btn">
                  										<button type="submit" class="btn btn-danger" id="submitBurger">Devour!</button>
                  									</span>
                  								</div>
                              </form>
                         </div>
                      </li>
                  {{/unless}}
              {{/each}}
                </div>
            </ul>

    </div>





    <div class="col-md-5 col-md-offset-1 menu2">

        <ul>
  				<h4> <u>Devoured burgers</u></h4>
  					{{#each burgers}}
  						{{#if this.devoured}}
  						<li>
  							<p id="p2">
  								{{this.id}}. {{this.burger_name}}
  									<form id="devouredBurgers" action="/delete?_method=DELETE" method="POST">
  									<div class="input-group">
  										<input type="hidden" class="form-control" name="id" value="{{this.id}}">
  										<span class="input-group-btn">
  											<button class="btn btn-primary" type="submit" id="submitBurger">I'm Stuffed!</button>
  										</span>
  									</div>
  								</form>
  							</p>
  						</li>
  					{{/if}}
  				{{/each}}
  			</ul>
    </div>



  </div>
</div>
